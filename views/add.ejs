<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen p-10 bg-zinc-800">
        <h1 class="text-2xl tracking-tight font-semibold text-[#dadada]">Create Post</h1>
        <hr class="opacity-20 my-5">
        <form action="/post/create" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 mt-3 outline-none text-white text-md" type="file" name="postImage">
            <input class="block w-1/3 px-3 py-2 mt-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700" type="text" name="title" placeholder="Title">
            <textarea class="block w-1/3 h-32 px-3 py-2 mt-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700 resize-none" type="text" name="description" placeholder="Description"></textarea>
            <input class="block px-5 py-2 mt-5 bg-blue-500 text-white rounded-md tracking-tight text-md font-semibold cursor-pointer" type="submit" value="Create Post">
        </form>
    </div>

