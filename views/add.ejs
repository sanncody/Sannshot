<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 text-white flex justify-center items-start">
        <div class="w-full max-w-xl p-6 sm:p-10 mt-10">
            <h1 class="text-2xl sm:text-3xl tracking-tight font-semibold text-[#dadada] mb-5 text-center md:text-left">
                Create Post
            </h1>
            <hr class="opacity-20 mb-8">

            <form action="/post/create" method="post" enctype="multipart/form-data" class="flex flex-col gap-4">
                <input
                    class="block w-full px-4 py-3 mt-3 outline-none rounded-md text-white text-md bg-zinc-700 border border-zinc-600 focus:ring-2 focus:ring-blue-500 transition"
                    type="file" name="postImage">

                <input
                    class="block w-full px-4 py-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700 border border-zinc-600 focus:ring-2 focus:ring-blue-500 transition"
                    type="text" name="title" placeholder="Title">

                <textarea
                    class="block w-full h-32 px-4 py-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700 border border-zinc-600 resize-none focus:ring-2 focus:ring-blue-500 transition"
                    name="description" placeholder="Description"></textarea>

                <input
                    class="block w-full py-3 bg-blue-500 hover:bg-blue-400 text-white rounded-md tracking-tight text-md font-semibold cursor-pointer transition-colors"
                    type="submit" value="Create Post">
            </form>
        </div>
    </div>

    <% include ./partials/footer.ejs %>