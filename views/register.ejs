<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-zinc-300 flex justify-center items-center">
        <div class="w-[30vw] bg-zinc-100 px-20 py-10 rounded-[30px]">
            <h1 class="mb-10 text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none capitalize">
                Create new Account</h1>
            <form action="/auth/register" method="post">
                <input class="border-2 rounded-md block w-full mt-2 mb-2 outline-none px-3 py-2" type="text"
                    placeholder="Name" name="name">
                <input class="border-2 rounded-md block w-full mt-2 mb-2 outline-none px-3 py-2" type="text"
                    placeholder="Username" name="username">
                <input class="border-2 rounded-md block w-full mt-2 mb-2 outline-none px-3 py-2" type="email"
                    placeholder="Email" name="email">
                <input class="border-2 rounded-md block w-full mt-2 mb-2 outline-none px-3 py-2" type="password"
                    placeholder="Password" name="password">
                <input
                    class="border-2 rounded-full block w-full mt-5 bg-red-600 text-white cursor-pointer px-3 py-2 font-semibold"
                    type="submit" value="Create New Account">
                <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">By continuing, you agree
                    to
                    Sannshot's Terms of Service and acknowledge you've read our Privacy Policy. Notice at
                    collection.
                </p>
            </form>
            <span class="inline-block mt-7 tracking-tighter text-zinc-700 text-md text-center w-full">Have an Account?<a
                    class="ml-1 font-bold" href="/">Login</a></span>
        </div>
    </div>


