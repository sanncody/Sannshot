<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sannshot: A photo collection gallery</title>
  <link rel="icon" href="/images/sannshotTitleImg.png">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
  <!-- Navbar code -->
  <% if (nav) { %>
    <nav class="w-full px-4 sm:px-6 md:px-10 py-3 flex flex-wrap justify-between items-center bg-zinc-800 text-[#dadada]">
      <!-- Logo -->
      <h3
        class="text-2xl sm:text-3xl font-bold tracking-tight bg-gradient-to-r from-yellow-500 to-orange-500 text-transparent bg-clip-text mb-2 sm:mb-0">
        <a href="/profile">Sannshot</a>
      </h3>

      <!-- Navigation links -->
      <button id="menu-btn" class="block md:hidden text-2xl focus:outline-none">
        <i class="ri-menu-line"></i>
      </button>

      <div id="menu" class="hidden w-full md:flex md:w-auto flex flex-col md:flex-row md:items-center items-end gap-4 md:gap-10 mt-5 md:mt-0">
        <a href="/profile" class="hover:text-yellow-400 transition-colors">Profile</a>
        <a href="/feed" class="hover:text-yellow-400 transition-colors">Feed</a>
        <a href="/logout"
          class="px-4 py-2 bg-red-700 hover:bg-red-600 rounded-lg -mr-2 text-zinc-200 font-semibold tracking-tight transition-colors">
          Logout
        </a>
      </div>
    </nav>

    <script>
      const menuBtn = document.getElementById("menu-btn");
      const menu = document.getElementById("menu");
      menuBtn?.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    </script>
  <% } %>
