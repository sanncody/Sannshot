<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen p-10 bg-zinc-800">
        <h1 class="text-2xl tracking-tight font-semibold text-orange-300">Edit Profile</h1>
        <hr class="opacity-20 my-5">
        <form action="/profile/edit/<%= user._id %>" method="post">
            <input class="block w-1/3 px-3 py-2 mt-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700"
                type="text" name="name" placeholder="Name" value="<%= user.name %>">
            <input class="block w-1/3 px-3 py-2 mt-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700"
                type="text" name="username" placeholder="Username" value="<%= user.username %>">
            <input
                class="block px-5 py-2 mt-5 bg-yellow-500 text-black rounded-md tracking-tight text-md font-semibold cursor-pointer"
                type="submit" value="Edit Profile">
        </form>
    </div>

<% include ./partials/footer.ejs %>