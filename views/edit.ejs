<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 text-white flex justify-center items-start">
        <div class="w-full max-w-xl p-6 sm:p-10 mt-20">
            <h1 class="text-2xl sm:text-3xl font-semibold tracking-tight text-orange-300 mb-4 text-center md:text-left">
                Edit Profile
            </h1>
            <hr class="opacity-20 mb-8">

            <form action="/profile/edit/<%= user._id %>" method="post" class="flex flex-col gap-4">
                <input
                    class="block w-full px-4 py-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700 focus:ring-2 focus:ring-yellow-500 transition"
                    type="text" name="name" placeholder="Name" value="<%= user.name %>">

                <input
                    class="block w-full px-4 py-3 outline-none rounded-md text-[#dadada] text-md bg-zinc-700 focus:ring-2 focus:ring-yellow-500 transition"
                    type="text" name="username" placeholder="Username" value="<%= user.username %>">

                <input
                    class="block w-full py-3 bg-yellow-500 hover:bg-yellow-400 text-black rounded-md tracking-tight text-md font-semibold cursor-pointer transition-colors"
                    type="submit" value="Edit Profile">
            </form>
        </div>
    </div>

    <% include ./partials/footer.ejs %>