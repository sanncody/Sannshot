<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 text-white p-5 sm:p-10">
        <h1 class="text-xl sm:text-2xl text-red-400 font-semibold tracking-tight text-center sm:text-left">Your Feed
        </h1>
        <hr class="opacity-30 mb-8 sm:mb-10 mt-5">

        <div class="flex flex-wrap justify-center sm:justify-start items-center gap-6 sm:gap-8">
            <% posts.forEach(post=> { %>
                <div
                    class="w-72 sm:w-80 bg-zinc-700 flex flex-col items-center justify-center rounded-lg mb-6 hover:scale-[1.02] transition-transform duration-300 ease-in-out">
                    <div class="w-64 sm:w-72 h-64 sm:h-72 px-4 py-2 overflow-hidden bg-zinc-700 mt-2 rounded-md">
                        <img src="/images/uploads/<%= post.postImg %>" alt=""
                            class="w-full h-full object-cover rounded-md">
                    </div>
                    <div class="my-3 px-4 py-2 text-center">
                        <h3 class="text-xl sm:text-2xl tracking-tight font-semibold">
                            <%= post.title %>
                        </h3>
                        <h6 class="text-sm sm:text-md opacity-100 font-bold mt-1">@<%= post?.user?.username %>
                        </h6>
                        <p class="text-sm sm:text-md tracking-tight font-medium opacity-70 mt-3">
                            <%= post.description %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>