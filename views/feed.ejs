<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 p-10 text-white">
        <div class="flex flex-wrap justify-start items-center gap-7 mt-5">
            <% posts.forEach(post => { %>
                <div class="w-80 bg-zinc-700 flex flex-col items-center justify-center rounded-lg mb-5">
                    <div class="w-72 h-72 px-5 py-2 overflow-hidden bg-zinc-700 mt-2">
                        <img src="/images/uploads/<%= post.postImg %>" alt="" class="w-full h-full object-cover rounded-md">
                    </div>
                    <div class="my-3 px-5 py-2">
                        <h3 class="text-2xl tracking-tight font-semibold text-center">
                            <%= post.title %>
                        </h3>
                        <h6 class="text-md opacity-100 text-center font-bold">@<%= post?.user?.username %></h6>
                        <p class="text-md tracking-tight font-medium opacity-60 mt-5 text-center">
                            <%= post.description %>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

<% include ./partials/footer.ejs %>