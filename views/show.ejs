<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 p-10 text-white">
        <h1 class="text-2xl text-red-400 font-semibold tracking-tight">All Pins</h1>
        <hr class="opacity-30 mb-10 mt-5">
        <div class="flex justify-start items-center gap-7">
            <% user.posts.map(post => { %>
                <div class="w-80 bg-zinc-700 flex flex-wrap items-center justify-center rounded-lg mb-5 transform transition duration-300 ease-in-out hover:-translate-y-2">
                    <div class="w-72 h-72 px-5 py-2 overflow-hidden bg-zinc-700 mt-2">
                        <img src="/images/uploads/<%= post.postImg %>" alt="" class="w-full h-full object-cover rounded-md">
                    </div>
                    <div class="mt-3 px-5 py-2">
                        <h3 class="text-2xl tracking-tight font-semibold">
                            <%= post.title %>
                        </h3>
                        <p class="text-md tracking-tight font-medium opacity-60 mt-2">
                            <%= post.description %>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

<% include ./partials/footer.ejs %>