<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 p-5 sm:p-10 text-white">
        <h1 class="text-xl sm:text-2xl text-red-400 font-semibold tracking-tight text-center sm:text-left">All Pins</h1>
        <hr class="opacity-30 mb-8 sm:mb-10 mt-5">

        <!-- Responsive Card Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 justify-items-center">
            <% user.posts.map(post=> { %>
                <div
                    class="w-72 sm:w-80 bg-zinc-700 rounded-lg overflow-hidden transform transition duration-300 ease-in-out hover:-translate-y-2">
                    <div class="w-full h-64 sm:h-72 overflow-hidden">
                        <img src="/images/uploads/<%= post.postImg %>" alt=""
                            class="w-full h-full object-cover rounded-t-md">
                    </div>
                    <div class="p-4">
                        <h3 class="text-lg sm:text-2xl tracking-tight font-semibold">
                            <%= post.title %>
                        </h3>
                        <p class="text-sm sm:text-md tracking-tight font-medium opacity-70 mt-2">
                            <%= post.description %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>