<% include ./partials/header.ejs %>

  <div
    class="w-full min-h-screen bg-[url('/images/bermuda-circle.png')] bg-center bg-cover flex justify-center items-center px-4 sm:px-6 md:px-8">
    <div
      class="w-full max-w-md sm:max-w-lg md:w-[30vw] bg-zinc-100 px-6 sm:px-10 md:px-20 py-8 sm:py-10 rounded-[20px] sm:rounded-[30px] shadow-md text-black">
      <h1
        class="mb-8 sm:mb-10 text-2xl sm:text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-tight capitalize">
        Welcome to Sannshot
      </h1>

      <form action="/auth/login" method="post" class="space-y-3 sm:space-y-4">
        <input class="border-2 rounded-md block w-full mt-2 outline-none px-3 py-2 sm:py-3 text-sm sm:text-base"
          type="text" placeholder="Username" name="username">
        <input class="border-2 rounded-md block w-full mt-2 outline-none px-3 py-2 sm:py-3 text-sm sm:text-base"
          type="password" placeholder="Password" name="password">
        <a href="#"
          class="inline-block mt-2 text-sm sm:text-base font-semibold tracking-tighter text-zinc-700 hover:text-zinc-900 transition-colors">
          Forgot Password?
        </a>
        <input
          class="border-2 rounded-full block w-full mt-4 sm:mt-5 bg-red-600 text-white cursor-pointer px-3 py-2 sm:py-3 font-semibold hover:bg-red-700 transition-colors"
          type="submit" value="Login">
        <p class="text-xs sm:text-sm font-semibold text-zinc-700 mt-4 sm:mt-5 w-11/12 sm:w-3/4 mx-auto text-center">
          By continuing, you agree to Sannshot's Terms of Service and acknowledge you've read our Privacy Policy. Notice
          at collection.
        </p>
      </form>

      <span class="inline-block mt-6 sm:mt-7 tracking-tighter text-zinc-700 text-sm sm:text-md text-center w-full">
        Don't have an account?
        <a class="font-semibold hover:text-red-600 transition-colors" href="/register">Register</a>
      </span>
    </div>
  </div>

  <% include ./partials/footer.ejs %>